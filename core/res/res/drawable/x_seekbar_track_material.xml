<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@id/background"
          android:gravity="center_vertical|fill_horizontal">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/seekbar_track_progress_height_material" />
			<size android:width="@*android:dimen/seekbar_track_material_width" />
            <size android:height="@*android:dimen/seekbar_track_material_height" />
            <solid android:color="@color/background_grey" />
			<corners android:radius="15dp"/>
        </shape>
    </item>
    <item android:id="@id/progress"
          android:gravity="center_vertical|fill_horizontal">
        <scale android:scaleWidth="90%">
            <selector>
                <item android:state_enabled="false"
                      android:drawable="@color/transparent" />
                <item>
                    <shape android:shape="rectangle">
                        <size android:width="@*android:dimen/seekbar_track_material_width" />
                        <size android:height="@*android:dimen/seekbar_track_material_height" />
                        <corners android:radius="15dp"/>
                        <gradient 
                            android:startColor="@color/gradient_start"
                            android:endColor="@color/gradient_end"
                            android:angle="45"/>
                    </shape>
                </item>
            </selector>
        </scale>
    </item>
</layer-list>
